<mapper namespace="com.diary.dailydiary.dao.DiaryDAO">

<!-- 본인이 작성한 일기 갯수-->
	<select id="getBoardCount" parameterType="int" resultType="int">
		select count(*) from board
		where user_seq = #{userSeq}
	</select>

	<!--	일기 총 갯수 가져오기-->
	<select id="getAllDiaryCnt" resultType="int">
		select count(*) from board
	</select>

<!-- 작성한 일기 목록 가져오기 -->
	<select id="getBoardList" parameterType="hashmap" resultType="diarydto">
		select * from board
		where user_seq = #{userSeq}
		ORDER BY board_seq DESC
		limit #{limit},10
	</select>

<!-- 일기 작성하기-->
	<insert id="insertBoard" parameterType="diarydto">
		insert into board(user_seq, title, content, secret, file_name, file_path, date)
		values (#{userSeq},#{title},#{content},#{secret},#{fileName},#{filePath},now())
	</insert>
<!--일기 상세보기-->
	<select id="getDiary" parameterType="int" resultType="diarydto">
		select * from board
		where board_seq=#{boardSeq}
	</select>
<!--일기 삭제하기-->
	<delete id="deleteDiary" parameterType="int">
		delete from board where board_seq=#{boardSeq}
	</delete>
<!-- 일기 수정하기-->
	<update id="updateDiary" parameterType="diarydto">
		update board set
		title=#{title},
		content=#{content},
		file_name=#{fileName},
		file_path=#{filePath},
		date=now()
		where board_seq=#{boardSeq}
	</update>
<!--일기 검색-->
	<select id="getDiaryListByText" parameterType="String" resultType="diarydto">
		SELECT * FROM board
		WHERE title LIKE concat('%',#{text},'%') OR content LIKE concat('%',#{text},'%')
		ORDER BY date desc
	</select>
